<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/coffe1"/>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_titleNotiSub"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Bạn thích món nào nhất tại Nhà"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_notiSub1"
                        android:src="@drawable/ic_latte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="6dp"
                        android:id="@+id/tv_notiSub1"
                        android:textSize="20sp"
                        android:text="Cà phê sữa đậm đà"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_notiSub2"
                        android:src="@drawable/ic_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="6dp"
                        android:id="@+id/tv_notiSub2"
                        android:textSize="20sp"
                        android:text="Trà đào cam sả trứ danh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_notiSub3"
                        android:src="@drawable/ic_milk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="6dp"
                        android:id="@+id/tv_notiSub3"
                        android:textSize="20sp"
                        android:text="Trà OoLong hạt sen thơm bùi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_bottom"
                    android:paddingTop="10dp"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="15sp"
                    android:text="Chủ nhật tuần trước lúc 11:00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A4A4A4"/>
            <LinearLayout
                android:padding="10dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bt_money"
                    android:textSize="17sp"
                    android:textAllCaps="false"
                    android:layout_marginLeft="70dp"
                    android:text="Order Ngay!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>