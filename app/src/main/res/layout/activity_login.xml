<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    tools:context=".Login">
    <ImageView
        android:src="@drawable/img_headerlogin"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </ImageView>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:text="Chào bạn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="Nhập số điện thoại để tiếp tục"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:background="@color/white"-->
<!--                app:cardCornerRadius="10dp"-->
<!--                android:layout_height="60dp">-->
                <LinearLayout
                    android:background="@drawable/detail_button"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/flag"
                        android:layout_width="50dp"
                        android:paddingRight="5dp"
                        android:layout_height="30dp">
                    </ImageView>
                    <ImageView
                        android:src="@drawable/ic_baseline_arrow_drop_down_24"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                    </ImageView>
                </LinearLayout>
<!--            </androidx.cardview.widget.CardView>-->
<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:background="@color/white"-->
<!--                app:cardCornerRadius="10dp"-->
<!--                android:layout_height="60dp">-->
                    <EditText
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:hint="Số điện thoại"
                        android:gravity="center_vertical"
                        android:background="@drawable/detail_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </EditText>
<!--            </androidx.cardview.widget.CardView>-->
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:text="Hoặc đăng nhập bằng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<!--            <androidx.cardview.widget.CardView-->
<!--                app:cardCornerRadius="10dp"-->
<!--                android:background="#0000FF"-->
<!--                android:layout_marginRight="20dp"-->
<!--                android:layout_width="150dp"-->
<!--                android:layout_height="wrap_content">-->
                <TextView
                    android:id="@+id/tv_fb"
                    android:textColor="@color/white"
                    android:background="@drawable/button_fb"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_marginRight="20dp"
                    android:text="Facebook"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                </TextView>
<!--            </androidx.cardview.widget.CardView>-->
<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_marginLeft="20dp"-->
<!--                app:cardCornerRadius="10dp"-->
<!--                android:background="@color/orange"-->
<!--                android:layout_width="150dp"-->
<!--                android:layout_height="wrap_content">-->
                <TextView
                    android:id="@+id/tv_email"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bt_email"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:textSize="18sp"
                    android:text="Email"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                </TextView>
<!--            </androidx.cardview.widget.CardView>-->
        </LinearLayout>
<!--        <androidx.cardview.widget.CardView-->
<!--            android:background="@color/orange"-->
<!--            android:layout_marginLeft="25dp"-->
<!--            android:layout_marginRight="25dp"-->
<!--            app:cardCornerRadius="10dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content">-->
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:background="@drawable/bt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@color/orange"
                    android:src="@drawable/ic_apple"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                </ImageView>
                <TextView
                    android:textColor="@color/black"
                    android:background="@color/orange"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Đăng nhập bằng Apple"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
<!--        </androidx.cardview.widget.CardView>-->
        <TextView
            android:id="@+id/tv_out"
            android:textColor="#0040FF"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:text="Bỏ qua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
</LinearLayout>