<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".TichDiem">
    <LinearLayout
        android:paddingTop="13dp"
        android:paddingBottom="20dp"
        android:background="@color/white"
        android:weightSum="10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/close_tichdiem"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="7"
            android:text="Mã thành viên"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A4A4A4"/>
            <ImageView
                android:background="@drawable/detail_button"
                android:layout_margin="23dp"
                android:src="@drawable/maqr"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginRight="23dp"
                android:layout_marginLeft="23dp"
                android:text="Đưa mã này cho nhân viên khi thanh toán"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <View
                android:layout_margin="23dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A4A4A4"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginRight="23dp"
                android:layout_marginLeft="23dp"
                android:textSize="17sp"
                android:text="Coupon của bạn (3)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginRight="23dp"
                android:layout_marginLeft="23dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/coupon3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginRight="23dp"
                android:layout_marginLeft="23dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/coupon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginRight="23dp"
                android:layout_marginLeft="23dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/coupon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>