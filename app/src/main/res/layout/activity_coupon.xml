<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    tools:context=".Coupon">
    <LinearLayout
        android:paddingTop="13dp"
        android:paddingBottom="20dp"
        android:background="@color/white"
        android:weightSum="10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/close_tichdiem"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="7"
            android:text="Coupon của bạn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/design_boder"
        android:padding="15dp"
        android:weightSum="9"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:background="@null"
            android:layout_weight="6"
            android:hint="Nhập mã khuyến mãi"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp">
        </EditText>
        <ImageView
            android:src="@drawable/ic_baseline_qr_code_scanner_24"
            android:layout_weight="1"
            android:layout_width="45dp"
            android:layout_height="45dp"></ImageView>
        <Button
            android:layout_marginLeft="10dp"
            android:background="@drawable/design_boder"
            android:layout_weight="2"
            android:text="Áp dụng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/coupon3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/coupon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/coupon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>