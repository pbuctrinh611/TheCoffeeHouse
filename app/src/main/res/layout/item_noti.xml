<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_noti"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/coupon"
            android:layout_width="70dp"
            android:layout_height="wrap_content">
        </ImageView>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title_noti"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="Bạn thích món nào nhất tại Nhà"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_noti1"
                    android:src="@drawable/ic_latte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/tv_noti1"
                    android:textSize="20sp"
                    android:text="Cà phê sữa đậm đà"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_noti2"
                    android:src="@drawable/ic_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/tv_noti2"
                    android:textSize="20sp"
                    android:text="Trà đào cam sả trứ danh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_noti3"
                    android:src="@drawable/ic_milk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/tv_noti3"
                    android:textSize="20sp"
                    android:text="Trà OoLong hạt sen thơm bùi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_bottom"
                android:paddingTop="10dp"
                android:drawablePadding="5dp"
                android:textSize="15sp"
                android:text="Chủ nhật tuần trước lúc 11:00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#A4A4A4"/>
</LinearLayout>